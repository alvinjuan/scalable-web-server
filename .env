# Server Configuration
PORT=3000
NODE_ENV=development  # Options: development, production, test

# JWT Configuration
JWT_SECRET=your_super_secure_secret_key_here  # At least 32 characters
JWT_EXPIRES_IN=24h  # Token expiration time

# Database Configuration (PostgreSQL)
DB_USER=postgres
DB_HOST=localhost  # Use actual host URL in production
DB_NAME=your_database_name
DB_PASSWORD=your_database_password
DB_PORT=5432

# AWS Configuration (if using AWS services)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# API Configuration
API_VERSION=v1
RATE_LIMIT=100  # Number of requests per window
RATE_LIMIT_WINDOW=15  # Time window in minutes

# Cors Configuration
CORS_ORIGIN=http://localhost:3000  # Comma-separated URLs in production

# Logging
LOG_LEVEL=debug  # Options: error, warn, info, debug